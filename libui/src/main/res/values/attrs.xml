<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <declare-styleable name="FMRecyclerView">
        <attr name="itemSpaceVertical" format="dimension" />
        <attr name="itemSpaceHorizontal" format="dimension" />
        <attr name="recyclerPaddingVertical" format="dimension" />
        <attr name="recyclerPaddingHorizontal" format="dimension" />
        <attr name="tvIsMenu" format="boolean"/>
        <attr name="tvIsSelectFirstVisiblePosition" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="XRecyclerView">
        <attr name="android:orientation" tools:ignore="ResourceName"/>
        <attr name="tvLayoutManager" format="string"/>
        <attr name="tvNumColumns" format="integer"/>
        <attr name="tvNumRows" format="integer"/>
        <attr name="tvLaneCountsStr" format="string"/>
        <attr name="tvIsIntelligentScroll" format="boolean"/>
        <attr name="tvSelectedItemOffsetStart" format="dimension"/>
        <attr name="tvSelectedItemOffsetEnd" format="dimension"/>
        <attr name="tvVerticalSpacing" format="dimension"/>
        <attr name="tvHorizontalSpacing" format="dimension"/>
        <attr name="tvSelectedItemIsCentered" format="boolean"/>

        <attr name="tvLoadMoreBeforehandCount" format="integer"/>
        <attr name="tvOptimizeLayout" format="boolean"/>
    </declare-styleable>


    <declare-styleable name="BaseFlyingFrameView">
        <attr name="flyingDuration" format="integer" />
        <attr name="flyingSpace" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ColorFlyingFrameView">
        <attr name="flyingBorderColor" format="color" />
        <attr name="flyingBorderWidth" format="dimension" />
        <attr name="flyingShadWidth" format="dimension" />
        <attr name="flyingShadowColor" format="color" />
        <attr name="flyingRadius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="DrawableFlyingFrameView">
        <attr name="flyingDrawable" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="AutoTurnViewPager">
        <attr name="canLoop" format="boolean" />
        <attr name="canTurn" format="boolean" />
        <attr name="autoTurnTime" format="integer|reference" />
        <attr name="scrollDuration" format="integer|reference" />
        <attr name="isTouchScroll" format="boolean" />
        <attr name="reverse" format="boolean"/>
    </declare-styleable>

</resources>
